{
  "name": "utu-kapinda-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Ütü Kapında - Kuru Temizleme ve Ütü Servisi",
  "repository": {
    "type": "git",
    "url": "https://github.com/omerkoray/utukapinda.git"
  },
  "author": "Ömer Koray",
  "license": "UNLICENSED",
  "scripts": {
    "setup": "npm install && cd backend && npm install && cd ../customer-web && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:web": "cd customer-web && npm run dev",
    "build": "npm run build:web",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd customer-web && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}